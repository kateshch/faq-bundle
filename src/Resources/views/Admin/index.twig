<div class="col-lg-2 list-categories">
    <div class="wrapper wrapper-content animated fadeInRight">
        <a href="{{ path('faq_bundle_admin.new_faq_category_view') }}"><i class="fa fa-plus">Добавить категорию</i></a>

        {% for i,item in categories %}
            <div class="row">
                    <a href="{{ path('faq_bundle_admin.faq_category_show', {'category': item.id}) }}" class="show-category" data-id="{{ item.id }}"><span>{{ item.title }}
                   </span> </a>
                    <a class="edit-category" data-id="{{ item.id }}"
                       href="{{ path('faq_bundle_admin.edit_faq_category_view', {'category': item.id}) }}">
                        <i class="fa fa-wrench"></i>
                    </a>
                    <a class="remove-category" data-id="{{ item.id }}">
                        <i class="fa fa-times"></i>
                    </a>
            </div>
        {% endfor %}
    </div>
</div>
<div class="col-lg-10 list-questions">

</div>
