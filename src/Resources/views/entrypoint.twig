{% spaceless %}
    <!DOCTYPE html>
    <html lang="{{ app.request.locale }}">
    <head>
        <meta charset="utf-8">
        <meta name="viewport" content="width=device-width, initial-scale=1.0, maximum-scale=1.0, user-scalable=yes"/>
        <meta http-equiv="X-UA-Compatible" content="IE=10">
        <title></title>

        {% block global_css %}
            <link rel="stylesheet" href="{{ asset('assets/bankstandard-app/layout.css') }}">
        {% endblock %}



        {% block global_js %}
            <script>{# TODO: remove #}
                window.$debug = {{ app.debug?'true':'false' }};
                window.$assets_version = '{{ assets_version }}';
                window.$langs = {{ var.langs|json_encode|raw }};
                window.$lang_default = 'az';
                window.$locale = '{{ app.request.locale|raw }}'
            </script>

            <script src="{{ asset('assets/require.js') }}"></script>
            <script src="{{ asset('assets/requirejs.config.js') }}"></script>

            <script src="{{ asset('bundles/bazingajstranslation/js/translator.min.js') }}"></script>

            <script src="http://localhost:8081/browser-sync/browser-sync-client.js"></script>

            <script>requirejs(['kateshch-faq/entrypoint']);</script>
        {% endblock %}
    </head>
    <body>
    {% block body %}
        <div class="wrapper"></div>
        <div class="sidebar-cover"></div>
    {% endblock %}
    </body>
    </html>
{% endspaceless %}