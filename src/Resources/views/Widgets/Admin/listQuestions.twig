
<div class="row wrapper border-bottom white-bg page-heading">
  <div class="col-sm-4">
    <h2>FAQ</h2>
    <ol class="breadcrumb">
      <li>
        <a href="">Faq</a>
      </li>
      <li class="active">
        <strong>Questions</strong>
      </li>
    </ol>
  </div>
  <div class="col-sm-8">
    <div class="title-action">
      <a href="" class="btn btn-primary btn-sm add-question">Add question</a>
    </div>
  </div>
</div>

<div class="row">
  <div class="col-lg-12">
    <div class="wrapper wrapper-content animated fadeInRight">

      <div class="ibox-content m-b-sm border-bottom">
        <div class="text-center p-lg">
          <h2>If you don't find the answer to your question</h2>
          <span>add your question by selecting </span>
          <button title="Create new cluster" class="btn btn-primary btn-sm add"><i class="fa fa-plus"></i>
            <span class="bold">Add question</span></button>
          button
        </div>
      </div>
      <div class="new-question"></div>
      {% for i,item in model.toArray() %}
        <div class="faq-item">
          <div class="row">
            <div class="col-md-7">
              <a data-toggle="collapse" href="#faq{{ i-1 }}" class="faq-question"><p>Question:{{ item.message }}</p>
                <p>Answer:  {{ item.answer.message }}</p></a>
              <small>Added by <strong>{% if item.name %}{{ item.name }}{% else %}anonym{% endif %}</strong>
                <i class="fa fa-clock-o"></i>{{ item.createdAt }}
              </small>
            </div>
            <div class="col-md-3">
              <span class="small font-bold">{{ item.category.title }}</span>
            </div>
            <div class="col-md-2 text-right">
              <span class="small font-bold">Mark </span><br/>
              {{ item.mark }}
            </div>
          </div>
          <div class="row">
            <div class="col-lg-12">
              <div id="faq{{ i-1 }}" class="panel-collapse collapse faq-answer">
                <p>
                  <a href="#" class="remove-question" data-id="{{ item.id }}">Remove question</a>
                </p>
                <p>
                  <a href="#" class="edit-question" data-ordinal="{{ i }}">Edit question</a>
                </p>
              </div>
            </div>
            <div class="edit-question-{{ i }}"></div>
          </div>
        </div>
      {% endfor %}
    </div>
  </div>
</div>

