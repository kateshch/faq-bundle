<div class="ibox float-e-margins">
  <div class="ibox-title">
    <h5>Question form </h5>
  </div>
  <div class="ibox-content">
    <form class="edit-question-form form-horizontal">
      <div class="multilang-tabs">
        <ul class="tabset">
          {% for lang, title in langs %}
            <li class="{{ lang==langsSelected?'active':'' }}">
              <a href="#iwin-mi-tab" data-lang="{{ lang }}">{{ title }}{% if lang == langsDef %}
                  <span>(default)</span>{% endif %}</a>
            </li>
          {% endfor %}
        </ul>
        <div class="tab-content">
          {% for lang, title in langs %}
            {% if lang == langsSelected %}
              {% set transPrefix = 'translations['~(loop.index-1)~']' %}
              <div class="form-group"><label class="col-sm-2 control-label">Question</label>

                <div class="col-sm-10">
                  <textarea cols="20" rows="3" {% if lang!= 'ru' %}class="not-cyrillic" {% endif %} name="{{ transPrefix }}.message"
                            placeholder="Type question here"></textarea></div>
              </div>
              <div class="form-group"><label class="col-sm-2 control-label">Answer</label>

                <div class="col-sm-10">
                  <textarea cols="20" rows="3" {% if lang!= 'ru' %}class="not-cyrillic" {% endif %} name="answer.{{ transPrefix }}.message"
                            placeholder="Type your answer here"></textarea>
                </div>
              </div>
            {% endif %}
          {% endfor %}
        </div>
      </div>

      <div class="form-group"><label class="col-sm-2 control-label">Category</label>

        <div class="col-sm-10"><select class="form-control m-b" name="category">
            {% for type in categories.toArray %}
              <option value="{{ type.id }}">{{ type.title }}</option>
            {% endfor %}
          </select>

        </div>
      </div>
      <div class="form-group">
        <div class="col-sm-4 col-sm-offset-2">
          <button class="btn btn-white" type="submit">Cancel</button>
          <button type="submit" class="btn btn-primary save-question">Save</button>
        </div>
      </div>

    </form>
  </div>
</div>